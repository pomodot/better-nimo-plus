{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "__MSG_appName__",
  "version": "0.2",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "permissions": [
    "https://*.nimo.tv/*",
    "webRequest",
    "webRequestBlocking",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.nimo.tv/*"],
      "css": ["style.css"],
      "js": ["mention-emote.js", "mention-chat.js", "script.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "web_accessible_resources": ["images/mod_icon.png", "images/admin_icon.png"],
  "icons": {
    "16": "images/16.png",
    "32": "images/32.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "manifest_version": 2
}
